<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo para botón primario -->
    <style name="BotonPrimario" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="backgroundTint">@color/buttonPrimary</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Estilo para botón secundario -->
    <style name="BotonSecundario" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="backgroundTint">@color/red</item>
    </style>


    <style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
    </style>
</resources>